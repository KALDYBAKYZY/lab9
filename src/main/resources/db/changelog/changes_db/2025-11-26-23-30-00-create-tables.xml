<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-country-table" author="gulnazzhaiylgan">
        <createTable tableName="country">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(15)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create-item-table" author="gulnazzhaiylgan">
        <createTable tableName="item">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="manufacturer_id" type="bigint"/>
        </createTable>
    </changeSet>
    <changeSet id="fk-item-manufacturer" author="gulnazzhaiylgan">
        <addForeignKeyConstraint
                baseTableName="item"
                baseColumnNames="manufacturer_id"
                constraintName="fk_item_manufacturer"
                referencedTableName="country"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
